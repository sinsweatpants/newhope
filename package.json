{
  "name": "doodleduel-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx apps/backend/src/index.ts",
    "dev:frontend": "vite --config ./configs/vite.config.ts",
    "dev:backend": "NODE_ENV=development tsx apps/backend/src/index.ts",
    "build": "npm run check && npm run build:frontend && npm run build:backend",
    "build:frontend": "vite --config ./configs/vite.config.ts build",
    "build:backend": "esbuild apps/backend/src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist/server",
    "start": "NODE_ENV=production node dist/server/index.js",
    "check": "tsc --noEmit",
    "check:types": "tsc --noEmit --project tsconfig.json",
    "lint": "eslint apps packages --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint apps packages --ext .ts,.tsx,.js,.jsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "preview": "vite preview --config ./configs/vite.config.ts",
    "clean": "rimraf dist node_modules/.cache apps/*/dist packages/*/dist",
    "clean:deps": "rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "postinstall": "npm run check:types",
    "deploy": "npm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting"
  },
