# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/doodleduel
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=doodleduel
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# AI Services Configuration
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key-if-needed

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRE=7d
SESSION_SECRET=your-session-secret-key-min-32-chars
SESSION_EXPIRE=604800000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME="Screenplay Editor"

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/tmp/uploads
ALLOWED_FILE_TYPES=pdf,docx,doc,txt,rtf,png,jpg,jpeg,gif,bmp

# OCR Configuration
TESSERACT_CACHE_SIZE=100MB
OCR_TIMEOUT=60000
OCR_QUALITY=0.9
OCR_MAX_WIDTH=1920
OCR_MAX_HEIGHT=1080

# Performance Configuration
MEMORY_THRESHOLD=80
CACHE_TTL=3600000
TASK_QUEUE_SIZE=100
RENDER_THROTTLE_MS=16

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://your-domain.com
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security Configuration
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
TRUST_PROXY=false

# Development Configuration
DEV_SERVER_PORT=3000
FRONTEND_PORT=5173
BACKEND_PORT=3000
VITE_HMR_PORT=24678

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/doodleduel_test
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=70

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-if-using
ANALYTICS_ID=your-analytics-id-if-using
PERFORMANCE_MONITORING=true

# Feature Flags
FEATURE_AI_CLASSIFICATION=true
FEATURE_OCR_PROCESSING=true
FEATURE_BATCH_PROCESSING=true
FEATURE_ADVANCED_CACHING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_MEMORY_MANAGEMENT=true

# Deployment Configuration
DEPLOY_TARGET=firebase
BUILD_OUTPUT_DIR=dist
STATIC_FILES_DIR=public

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_TIMEOUT=30000
API_MAX_PAYLOAD_SIZE=50MB

# Cache Configuration
CACHE_PROVIDER=redis
CACHE_PREFIX=doodleduel:
CACHE_COMPRESSION=true
CACHE_ENCRYPTION=false

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Cluster Configuration
CLUSTER_ENABLED=false
WORKER_PROCESSES=auto

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=/api/csp-report